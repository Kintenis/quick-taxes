{% extends 'base.html.twig' %}

{% block title %}I. Kanto al. 21-6{% endblock %}

{% block body %}

    <div class="container">
        <div class="row text-center">
            <div class="col-md-12">
                <form method="post" action="" id="form-date" class="date_form">
                    {{ form_start(form) }}
                    <div class="form-row">
                        <div class="form-group col-md-2 offset-md-3">
                            {{ form_widget(form.year) }}
                        </div>
                        <div class="form-group col-md-4">
                            {{ form_widget(form.month) }}
                        </div>
                    </div>
                    <hr>

                    <div>
                        <i class="fas fa-tint fa-4x" style="color: #03cafc;"></i>
                        <p class="utility">Vanduo</p>
                    </div>

                    <div class="form-row">
                        <div class="col-md-6 location">
                            <i class="fas fa-bath fa-2x"></i>
                            <p class="location-text">WC</p>

                            <div class="form-row align-items-center">
                                <div class="col-md-6">
                                    <div class="input-group mb-2">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fas fa-fire"
                                                                             style="color: red;"></i>
                                            </div>
                                        </div>
                                        {{ form_widget(form.hotWc) }}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="input-group mb-2">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fas fa-snowflake"
                                                                             style="color: #03cafc;"></i></div>
                                        </div>
                                        {{ form_widget(form.coldWc) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 location">
                            <i class="fas fa-utensils fa-2x"></i>
                            <p class="location-text">Virtuvė</p>

                            <div class="form-row align-items-center">
                                <div class="col-md-6">
                                    <div class="input-group mb-2">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fas fa-fire"
                                                                             style="color: red;"></i>
                                            </div>
                                        </div>
                                        {{ form_widget(form.hotKitchen) }}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="input-group mb-2">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text"><i class="fas fa-snowflake"
                                                                             style="color: #03cafc;"></i></div>
                                        </div>
                                        {{ form_widget(form.coldKitchen) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr>

                    <div class="col-md-12" style="margin-top: 40px;">
                        <i class="fas fa-bolt fa-4x" style="color: #fce703;"></i>
                        <p class="utility">Elektra</p>
                    </div>
                    <div class="col-md-4 offset-md-4">
                        <div class="form-group">
                            {{ form_widget(form.electric) }}
                        </div>
                    </div>
                    <hr>

                    <div class="form-row align-items-center">
                        <div class="col-md-6">
                            <div class="input-group mb-2">
                                <div class="col-md-12" style="margin-top: 40px;">
                                    <i class="fa fa-envelope fa-4x" style="color: #333;"></i>
                                    <p class="utility">Mokesčiai</p>
                                </div>
                                <div class="col-md-4 offset-md-4">
                                    <div class="form-group">
                                        {{ form_widget(form.tax) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group mb-2">
                                <div class="col-md-12" style="margin-top: 40px;">
                                    <i class="fa fa-minus fa-4x" style="color: #333;"></i>
                                    <p class="utility">Kaupiamasis fondas</p>
                                </div>
                                <div class="col-md-4 offset-md-4">
                                    <div class="form-group">
                                        {{ form_widget(form.fund) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr>

                    {{ form_widget(form.submit) }}
                    {{ form_start(form) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}
